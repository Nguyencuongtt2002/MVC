
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="columns-container">
    <div class="container" id="columns">
        <!-- page heading-->
        <h2 class="page-heading">
            <span class="page-heading-title">Giỏ hàng</span>
        </h2>
        <!-- ../page heading-->
        <div class="page-content page-order">

            <div class="heading-counter warning">
                <span class="fa fa-shopping-cart"></span> Giỏ hàng của bạn có:
                <span id="count-item-cart" style="font-weight: bold"></span> <span> sản phẩm</span>
            </div>
            <div class="order-detail-content">
                <table class="table table-bordered table-responsive cart_summary">
                    <thead>
                        <tr>
                            <th class="cart_product">Ảnh</th>
                            <th>Tên SP</th>

                            <th>Đơn giá</th>
                            <th>Số lượng</th>
                            <th>Tổng tiền</th>
                            <th class="action"><i class="fa fa-trash-o"></i></th>
                        </tr>
                    </thead>
                    <tbody id="show-item-cart">
                        @*@foreach(var item in Model)
                             {
                                         <tr>
                                             <td class="cart_product">
                                                 <img src="~/Content/images/product-detail/@item.Anh" alt="Alternate Text" />
                                             </td>
                                             <td>@item.Ten</td>
                                             <td>@string.Format("{0:#,##0}", item.Gia)</td>
                                             <td>@item.SL</td>
                                             <td>@string.Format("{0:#,##0}", item.Gia * item.SL)</td>
                                             <td class="action"><i class="fa fa-trash-o"></i></td>
                                         </tr>
                            }*@
                    </tbody>
                    <tfoot>
                        <tr>
                            @*<td colspan="2" rowspan="1"></td>*@
                            <td colspan="3"><strong>Thành tiền (đã gồm thuế): </strong></td>
                            <td colspan="1" id="total-item-price" style="font-weight: bold; color: #e84d1c; font-size: 20px;">@*@string.Format("{0:#,##0}", ViewBag.total)*@</td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
                <div class="cart_navigation">
                    <a class="prev-btn" href="/Home/Index">Tiếp tục mua sắm</a>
                    <input style="float:right" ng-click="DatHang()" type="submit" value="Đặt hàng " />
                </div>
            </div>
        </div>
    </div>
</div>

