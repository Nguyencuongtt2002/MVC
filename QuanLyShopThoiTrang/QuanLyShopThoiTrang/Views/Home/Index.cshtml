                                    </div>
                                    <input ng-click="muahang(l.MaSP)" class="btn_muangay" type="button" value="MUA NGAY" />
                                    <div class="bestseller"></div>
                                </div>
                                <div class="right-block">
                                    <h5 class="product-name"><a ng-click="chitiet(l.MaSP)">{{l.TenSP}}</a></h5>

                                    <div class="content_price">
                                        <span class="price product-price"><span style="color: black">Đơn giá:</span>{{l.DonGia | number:1.0-3 }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Pagination or other content might be here -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
