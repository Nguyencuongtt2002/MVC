@model QuanLyShopThoiTrang.Models.NguoiDung
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="/Content/lib/bootstrap/css/bootstrap.min.css" />
    <link href="~/Content/Style.css" rel="stylesheet" />
    <title>Register</title>
</head>
<body>
    <div id="form-register">
        @using (Html.BeginForm("DangKy", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <table>
                <tr>
                    <th colspan="2" style="text-align:center; font-size:24px">Đăng ký tài khoản </th>
                </tr>
                <tr>
                    <td>TÀI KHOẢN :</td>
                    <td> @Html.TextBoxFor(m => m.TaiKhoan, "", new { @class = "form-control", @placeholder = "TaiKhoan" })</td>
                </tr>
                <tr>
                    <td colspan="2">@Html.ValidationMessageFor(m => m.TaiKhoan)</td>
                </tr>
                <tr>
                    <td>HỌ Tên:</td>
                    <td style="color:black; width:60%"> @Html.TextBoxFor(m => m.HoTen, "", new { @class = "form-control", @placeholder = "HoTen" })</td>
                </tr>
                <tr>
                    <td colspan="2">@Html.ValidationMessageFor(m => m.HoTen)</td>
                </tr>
                <tr>
                    <td>Địa Chỉ :</td>
                    <td style="color:black; width:60%"> @Html.TextBoxFor(m => m.DiaChi, "", new { @class = "form-control", @placeholder = "DiaChi" })</td>
                </tr>
                <tr>
                    <td colspan="2">@Html.ValidationMessageFor(m => m.DiaChi)</td>
                </tr>
                <tr>
                    <td>Phone :</td>
                    <td style="color:black; width:60%"> @Html.TextBoxFor(m => m.Phone, "", new { @class = "form-control", @placeholder = "Phone" })</td>
                </tr>
                <tr>
                    <td colspan="2">@Html.ValidationMessageFor(m => m.Phone)</td>
                </tr>
                <tr>
                    <td>EMAIL : </td>
                    <td style="color:black; width:60%"> @Html.TextBoxFor(m => m.email, "", new { @class = "form-control", @placeholder = "Email" })</td>
                </tr>
                <tr>
                    <td colspan="2">
                        @if (ViewBag.error != null)
                        {
                            <span class="badge badge-danger">@ViewBag.error</span>
                        }
                    </td>
                </tr>
                <tr>
                    <td>MẬT KHẨU :</td>
                    <td style="color:black; width:60%"> @Html.TextBoxFor(m => m.MatKhau, "", new { @class = "form-control", @placeholder = "MatKhau" })</td>
                </tr>
                <tr>
                    <td colspan="2">@Html.ValidationMessageFor(m => m.MatKhau)</td>
                </tr>
                <tr>
                    <td>Nhập Lại Mật Khẩu </td>
                    <td style="color:black; width:60%"> @Html.TextBoxFor(m => m.Confirm_MatKhau, "", new { @class = "form-control", @placeholder = "MatKhau" })</td>
                </tr>
                <tr>
                    <td colspan="2">@Html.ValidationMessageFor(m => m.Confirm_MatKhau)</td>
                </tr>
                <tr>
                    <td>
                    </td>
                    <td>
                        <input class="btn btn-primary" type="submit" id="dk" value="Đăng ký " />
                        <input class="btn btn-primary" type="reset" value="đặt lại" />
                        <a class="btn btn-primary" href="@Url.Action("DangNhap","Login")">Đăng nhập</a>
                    </td>
                </tr>
            </table>
        }
    </div>
</body>
</html>
